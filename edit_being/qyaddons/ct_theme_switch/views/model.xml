<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- select theme style -->
	    <template id="theme_default" name="option_theme_default" inherit_id="website.assets_frontend" active="True" customize_show="False" priority="999">
	        <xpath expr="." position="inside">
	            <link href="/ct_theme_switch/static/less/theme_default.less"
	                  rel="stylesheet" type="text/less" />
	        </xpath>
    	</template>

    	<template id="theme_red" name="option_theme_red" inherit_id="web.assets_common" active="False" customize_show="False" priority="999">
	        <xpath expr="." position="inside">
	            <link href="/ct_theme_switch/static/less/theme_red.less"
	                  rel="stylesheet" type="text/less" />
	        </xpath>
    	</template>
    </data>
</odoo>