<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	<t t-name="PosIndex">
		<div></div>
	</t>
	<t t-name="PosHom">
				<div class="container-fluid Theme-pos cchong">
			<div class="pos_header">
				<div class="row">
					<div class="col-xs-12 col-md-6">
						<div class="ibox" data-id="in">
							<div class="ibox-content"> 
								<div class="title col-xs-10">
									销售笔数
								</div>
								<div class="total col-xs-2">
									<t t-esc="data.sale_count"/>
								</div>
							</div>
						</div>
					</div>
					<div class="col-xs-12 col-md-6">
						<div class="ibox" data-id="in">
							<div class="ibox-content"> 
								<div class="title col-xs-10">
									销售金额
								</div>
								<div class="total col-xs-2">
									￥<t t-esc="data.sale_amount?data.sale_amount:'0'"/>
								</div>
							</div>
						</div>
					</div>
					<div class="col-xs-12 col-md-6">
						<div class="ibox refund" data-id="out">
							<div class="ibox-content"> 
								<div class="title col-xs-10">
									退货笔数
								</div>
								<div class="total col-xs-2">
									<t t-esc="data.refund_count?data.refund_count:'0'"/>
								</div>
							</div>
						</div>
					</div>
					<div class="col-xs-12 col-md-6">
						<div class="ibox refund" data-id="out">
							<div class="ibox-content"> 
								<div class="title col-xs-10">
									退货金额
								</div>
								<div class="total col-xs-2">
									￥<t t-esc="data.refund_amount?data.refund_amount:'0'"/>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="content">
				<div class="row">
					<div class="col-xs-12 col-md-6">
						<div class="ibox float-e-margins" id="Income">
							<div class="ibox-title">
								<h5>
									<i class="fa fa-pie-chart"></i>
	                                收入统计
	                            </h5>
							</div>
							<div class="ibox-content chart_show">

	                        </div>
						</div>
					</div>
					<div class="col-xs-12 col-md-6">
						<div class="ibox float-e-margins" id="SalesCharts">
							<div class="ibox-title">
								<h5>
									<i class="fa fa-bar-chart"></i>
	                                销售排行榜前5
	                            </h5>
							</div>
							<div class="ibox-content chart_show">

	                        </div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</t>
</templates>
